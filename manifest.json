{
  "name": "BigWiki",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Big Wiki displays just the meat of wikipedia articles.",
  "homepage_url": "http://makenova.com/projects/bigwiki.html",
  "icons": {
    "19": "icons/icon19.png",
    "38": "icons/icon38.png",
    "256": "icons/icon256.png"
  },
  "permissions": [
    "http://en.wikipedia.org/*",
    "tabs"
  ],
  "default_locale": "en",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Big Wiki",
    "default_popup": "src/page_action/page_action.html"
  },
  "content_scripts": [
    {
      "matches": [ "*://*.wikipedia.org/*" ],
      "css": [ "src/inject/contentscript.css" ],
      "js": [ "src/inject/contentscript.js" ]
    }
  ],
  "background": {
    "scripts": [ "src/bg/background.js" ],
    "persistent": false
  }
}